app = angular.module("Manticore", [
    'resources.countries',
    'directives.share',
])
.config(["$httpProvider", "$anchorScrollProvider", '$urlRouterProvider', ($httpProvider, $anchorScrollProvider, $urlRouterProvider)->
        $httpProvider.defaults.headers.common['X-CSRF-Token'] = $('meta[name=csrf-token]').attr('content')
        $urlRouterProvider.otherwise('/')
    ])
.run(["$rootScope", "$http", "$state", "$stateParams", ($rootScope, $http, $state, $stateParams) ->
        $rootScope.$debugMode = "on"
    ])

